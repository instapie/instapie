= form_for(User.new, :url => register_path) do |f|
  .field
    = f.label(:name)
    = f.text_field(:name)

  .field
    = f.label(:email)
    = f.text_field(:email)

  .field
    = f.label(:password)
    = f.password_field(:password)

  .field
    = f.label(:password_confirmation)
    = f.password_field(:password_confirmation)

  .actions
    = submit_tag('Register')
    = back_link(root_path)
